---
import { Image } from "astro:assets";

const { filename, alt, title, caption } = Astro.props;
---

<figure
  class="rounded-2xl overflow-hidden bg-zblock flex flex-col border border-dashed"
>
  <Image src={filename} alt={alt || ""} title={title} />
  <figcaption class="px-4 py-1 mt-0">{caption}</figcaption>
</figure>
