---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import SnippetItem from "../../components/SnippetItem.astro";
import Metadata from "../../components/Metadata.astro";

const title = "Snippets";

const snippets = (await getCollection("snippets")).sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
---

<Metadata
  title={title}
  author="Colin McCulloch"
  description="A collection of code snippets written by me"
  keywords="snippets, code, programming"
  type="website"
  slot="metadata"
/>

<Layout>
  <h1 class="text-zgold text-4xl font-bold my-4">{title}</h1>
  <div class="prose prose-invert prose-zyzle mx-auto mb-6 lg:text-lg">
    <p>
      A collection of various code snippets I've found useful over the years,
      most of them too small to warrant a blog post of their own.
    </p>
  </div>
  <div class="flex flex-col gap-4 mb-6">
    {
      snippets.map((snippet) => (
        <SnippetItem
          id={snippet.id}
          title={snippet.data.title}
          pubDate={snippet.data.pubDate}
          tags={snippet.data.tags}
          language={snippet.data.language}
        />
      ))
    }
  </div>
</Layout>
